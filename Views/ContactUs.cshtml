@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactUs>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<section class="contact-us">
                <div class="row">
                        <h1>@Model.Value("contactUsTitle")</h1>
                    <div class="contact-col">
                        <form action="form-handler.php" method="POST">
                            <input type="text" name="name" placeholder="@Model.Value("contactUsPlaceholderName")" required>
                            <input type="email" name="email" placeholder="@Model.Value("contactUsPlaceholderEmail")" required>
                            <input type="text" name="subject" placeholder="@Model.Value("contactUsPlaceholderSubject")" required>
                            <textarea rows="8" name="message" placeholder="@Model.Value("contactUsPlaceholderMessage")" required></textarea>
                            <button type="submit" class="hero-btn red-btn">@Model.Value("contactUsSendButton")</button>
                        </form>
                    </div>

                    <div class="contact-col-info">
                        <div>
                            <i class="fa fa-home"></i>
                            <span>
                                <h5>Rosa Drottninggatan 5</h5>
                                <p> Örebro, SWE</p>
                            </span>
                        </div>
                        <div>
                            <i class="fa fa-phone"></i>
                            <span>
                                <h5>+46 734567890</h5>
                                <p>Måndag till Söndag, 10.00 till 18.00 </p>
                            </span>
                        </div>
                        <div>
                            <i class="fa fa-envelope-o"></i>
                            <span>
                                <h5>info@("@")gmail.com</h5>
                                <p>Maila oss gärna din fråga</p>
                            </span>
                        </div>
                    </div>
                </div>
            </section>