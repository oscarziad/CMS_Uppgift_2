@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Drink>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<div class="grid-item dryck">
    <div>
        <h1>Välkommen Dryck recept</h1>
        <p>Tryck på länkarna för att komma till recept!</p>
        <div>
            
            @{
            	var selection = Umbraco.Content(1104)
                .ChildrenOfType("drinkrecipe")
                .Where(x => x.IsVisible())
                .OrderBy(x => x.Name);
            }
            
        	@foreach (var item in selection)
        	{
        		<li>
        			<a href="@item.Url()">@item.Name()</a>
        		</li>
        	}

        </div>
    </div>
</div>